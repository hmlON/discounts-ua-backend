doctype html
html
  head
    title Discounts UA
    link href="https://cdn.rawgit.com/Chalarangelo/mini.css/v2.1.0/dist/mini-default.min.css" rel="stylesheet" type='text/css'
    link href="application.css" rel='stylesheet' type='text/css'
    link href="modal.css" rel='stylesheet' type='text/css'
    link href="favicon.ico" rel="shortcut icon" type="image/png"
    meta name="viewport" content="width=device-width, initial-scale=1"
    link rel="manifest" href="manifest.json"

  body
    .active-title.discount-type-title
    - shops.each do |shop|
      - shop.discount_types.each do |discount_type|
        .discount-type
          .discount-type-title
            span.shop-name = shop.name.titleize
            | : 
            span.discount-type-name = discount_type.name.humanize
            |  (ends 
            span.discount-end-date = discount_type.active_period.end_date.strftime('%d %b %Y')
            | )
          .container.discounts
            - discount_type.active_period.discounts.each do |discount|
              .discount
                img.discount-img src=image_proxy_url(discount.small_img_url) data-high-src=image_proxy_url(discount.img_url) alt=discount.name
                .discount-name = discount.name
                .discount-prices
                  span.discount-price-new = format_price(discount.price_new)
                  span.discount-price-old = format_price(discount.price_old)

    #discount-img-modal.modal
      img.modal-img
      .modal-caption

    script src='application.js'
